<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myphysio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddExerciseVideo"></activity>
        <activity android:name=".RatingActivity" />
        <activity android:name=".ViewRehabPlan" />
        <activity
            android:name=".ExerciseVideo"
            android:label="@string/title_activity_exercise_video"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddAppointment" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".ViewAppointment" />
        <activity
            android:name=".AppointmentActivity"
            android:label="@string/title_activity_appointment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewHealthRecord" />
        <activity
            android:name=".HealthRecordActivity"
            android:label="@string/title_activity_health_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".EditProfile" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>